{{>layout/header}}
<br><br><br>
<main role="main">
    <div class="container">
        <div class="col-md-10">
            <div class="col-md-50">
                <h1><strong>게시물 등록</strong></h1>
                <br>
                <form>
                    <div class="form-group">
                        <label for="title">제목</label>
                        <input type="text" class="form-control required" id="title" placeholder="제목">
                    </div>
                    <div class="form-group">
                        <label for="author">첨부파일</label>
                        <input type="text" class="form-control" id="fileID" placeholder="첨부할 파일을 선택하세요">
                    </div>
                    <div class="form-group">
                        <label for="author">위치정보</label>
                        <input type="text" class="form-control" id="locID" placeholder="위치정보를 선택하세요">
                    </div>
                    <div class="form-group">
                        <label for="content">본문</label>
                        <textarea class="form-control" id="content" placeholder="내용"></textarea>
                    </div>
                </form>
                <a href="/board" role="button" class="btn btn-secondary">취소</a>
                <button type="button" class="btn btn-primary" id="btn-save">등록</button>
            </div>
        </div>
    </div>
</main>
{{>layout/footer}}
<script src="/static/js/app/save.js"></script>
</body>
</html>